@model IEnumerable<StudentDto>

@{
    ViewData["Title"] = "Students";
}

<table class="table-condensed">
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.FullName)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.Birthdate)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.AcademicRecord)
        </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.FullName
            </td>
            <td>
                @item.Birthdate.Date
            </td>
            <td>
                @item.AcademicRecord
            </td>
            <td>
                @Html.ActionLink("Edit", "EditStudent", "Home", new { id = item.Id }) | @Html.ActionLink("Delete", "DeleteStudent", "Home", new { id = item.Id })
            </td>
        </tr>
    }
</table>
